{% extends 'base.html.twig' %}

{% block title %}User index
{% endblock %}


{% block body %}
	{% include 'back.html.twig' %}
	<div class="border border-black m-4 p-2 flex gap-2 flex-wrap flex-col">

		<div class="flex flex-col gap-4 flex-1">
			<div>
				<strong>Nom utilisateur:</strong>
				{{ user.username }}</div>
			<div>
				<strong>Email:</strong>
				{{ user.email }}</div>
			<div>
				<strong>Bio:</strong>
				{{ user.bio }}</div>

			<a href="{{ path('app_edit_profile_edit') }}" class="text-blue-500">Modifier</a>
		</div>
		<div style="zoom:70%;" class="border flex-1 border-black p-2">

			{{ include('profile/_showprofile.html.twig') }}
		</div>
	</div>
{% endblock %}
