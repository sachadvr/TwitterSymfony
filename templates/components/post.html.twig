    <div class="post ml-4 mr-4 outline outline-1 outline-black flex flex-row gap-3 p-3 relative">
    <a href="{{ path('app_profile', {'username': post.createdBy.username}) }}" ><img src="{{ asset(post.createdBy.getImagePath()) }}" alt="image" class="h-10 w-10 object-contain rounded-full flex-grow-0"></a>
    <div class="flex-1 flex flex-col">
            <a href="{{ path('app_profile', {'username': post.createdBy.username}) }}" class="w-fit showFollow">@{{ post.createdBy.username }} 
             {% include '/components/_following.html.twig' with {'createdBy': post.createdBy} %}
    </a>
            <div>{{ this.replacedContent(post.contenu) |raw  }}</div>
            <div class="flex flex-row gap-3 w-fit">
            <a href="/post/{{post.id}}/retweet" class="w-fit"><div class="flex items-center gap-1 
            "><i style="width:20px" class="fas fa-retweet  hover:bg-green-300 transition-all rounded-full
            {# on hover only hover the next child #}
            
            {% if post.retweet.contains(app.user) %}
            bg-green-200
            {% endif %}
            "></i><div>{{post.retweet | length}}</div></div></a>
            
            <a href="/post/{{post.id}}/like" class="w-fit"><div class="flex items-center gap-1 hover:text-red-500 transition-all duration-75
            "><i style="width:20px" class="fas fa-heart   
            {% if post.likes.contains(app.user) %}
            text-red-500
            {% endif %}
            "></i>{{post.likes | length}}</div></a>
            </div>
            {% if post.createdAt|date('d/m/Y') == now|date('d/m/Y') %}
            <p class="text-xs right-2 bottom-2 absolute">{{ post.createdAt | date('H:i') }}</p>
            {% else %}
            <p class="text-xs right-2 bottom-2 absolute">{{ post.createdAt | date('d/m/Y') }}</p>
            {% endif %}
    </div>
    </div>